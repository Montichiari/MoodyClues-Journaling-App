package com.moodyclues.repository;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.moodyclues.model.User;


public interface JournalUserRepository extends JpaRepository<User, String> {

	@Query("SELECT u FROM User u WHERE u.email = :email")
	public Optional<User> findUserByEmail(@Param("email") String email);
	
	@Query("SELECT u FROM User u WHERE u.id = :id")
	public Optional<User> findUserById(@Param("id") String id);
	
}
